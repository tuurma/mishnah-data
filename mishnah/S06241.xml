                                <unclear>ו/ז</unclear>
                            </damage>
                            <damage>ו</damage>נביא ה<damage>
                                <gap reason="damage" extent="26" unit="chars"/>
                            </damage>
                            <lb n="4"/>
                            <damage>
                                <gap reason="damage" extent="1" unit="chars"/>
                            </damage>בל הכובש
                            את נבואתו <damage>ו<gap reason="damage" extent="32" unit="chars"/>
